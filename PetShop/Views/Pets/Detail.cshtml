@using System.Globalization
@model PetShop.ViewModles.PetVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
@{
    var price = Model.Price.ToString("C0", new CultureInfo("vi-VN"));
    if (price.EndsWith(".00"))
    {
        price = price.Substring(0, price.Length - 3);
    }
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Shop Detail</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Shop</a></li>
                    <li class="breadcrumb-item"><a href="#">Pet</a></li>
                    <li class="breadcrumb-item active">Shop Detail </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Shop Detail  -->
<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active"> <img class="d-block w-100" src="https://localhost:7254/images/pet/@Model.ImageUrl" alt="First slide"> </div>
                        @foreach (var imageUrl in Model.PetImages)
                        {
                            <div class="carousel-item"> <img class="d-block w-100" src="https://localhost:7254/images/pet/@imageUrl" alt="Second slide"> </div>
                            
                        }
                        
                        
                    </div>
                    <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                        <span class="sr-only">Next</span>
                    </a>

                    <ol class="carousel-indicators">
                        @foreach (var imageUrl in Model.PetImages)
                        {
                            <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                                <img class="d-block w-100 img-fluid" src="https://localhost:7254/images/pet/@imageUrl" alt="" />
                            </li>
                        }
                       
                    </ol>
                </div>
            </div>
            <div class="col-xl-7 col-lg-7 col-md-6">
                <div class="single-product-details">
                    <h2>@Model.Name</h2>
                    <!--<h5> <del>$ 60.00</del> $40.79</h5>-->

                    <h5>@price</h5>
                    <h4>Breed: @Model.Breed</h4>
                    <h4>Age: @Model.Age year old</h4>
                    <h4>IsAvailable: @Model.IsAvailable</h4>
                    <h4>Short Description:</h4>
                    <p>@Model.Description</p>
                   

                    <div class="price-box-bar">
                        <div class="cart-and-bay-btn">
                          
                            <a class="btn hvr-hover" data-fancybox-close="" asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model.PetId">Add to cart</a>
                            <a class="btn hvr-hover" data-fancybox-close="" asp-action="Index" asp-controller="Pets" asp-route-id="@Model.PetId">Shop</a>

                        </div>
                    </div>

                    <div class="add-to-btn">
                        
                        <div class="share-bar">
                            <a class="btn hvr-hover" href="https://www.facebook.com/"><i class="fab fa-facebook" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="#" ><i class="fab fa-google-plus" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="https://x.com/i/flow/login"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="https://www.pinterest.com/"><i class="fab fa-pinterest-p" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="https://www.whatsapp.com/"><i class="fab fa-whatsapp" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        

        <div class="row my-5">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Similar Products</h1>
                    <p>Similar products you may be interested in</p>
                </div>
                <div class="featured-products-box owl-carousel owl-theme">
                   
                    @foreach (var pet in Model.SimilarPets)
                    {
                        <div class="item">
                            <div class="products-single fix">
                                <div class="box-img-hover">
                                    <img src="https://localhost:7254/images/pet/@pet.ImageUrl" class="img-fluid" alt="Image">
                                    <div class="mask-icon">
                                        <ul>
                                            <li><a href="#" data-toggle="tooltip" data-placement="right" title="View"><i class="fas fa-eye"></i></a></li>
                                            <li><a href="#" data-toggle="tooltip" data-placement="right" title="Compare"><i class="fas fa-sync-alt"></i></a></li>
                                            <li><a href="#" data-toggle="tooltip" data-placement="right" title="Add to Wishlist"><i class="far fa-heart"></i></a></li>
                                        </ul>
                                        <a class="cart" href="#">Add to Cart</a>
                                    </div>
                                </div>
                                <div class="why-text">
                                    <a asp-action="Detail" asp-controller="Pets" asp-route-id="@pet.PetId">
                                        <h4>@pet.Name</h4>
                                        
                                        <h5>@price</h5>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>

    </div>
</div>
<!-- End Cart -->

