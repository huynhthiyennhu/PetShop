                    <a class="btn hvr-hover" href="#">Thank you very much</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Categories -->

<div class="box-add-products">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="offer-box-products">
                    <img class="img-fluid" src="~/images/add01.jpg" alt="" />
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="offer-box-products">
                    <img class="img-fluid" src="~/images/add02.jpg" alt="" />
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Start Products  -->



<div class="row my-5">
    <div class="col-lg-12">
        <div class="title-all text-center">
            <h1>Featured Products</h1>
            <p>A list of some of the outstanding products in our store..</p>
        </div>
        <div class="featured-products-box owl-carousel owl-theme">
            @foreach (var item in Model)
            {
                 <div class="item">
                    <div class="products-single fix">
                        <div class="box-img-hover">
                            <a asp-action="Detail" asp-controller="Pets" asp-route-id="@item.PetId">
                                <img height="300" width="300" src="https://localhost:7254/images/pet/@item.ImageUrl" alt="@item.Name">
                            </a>

                            <div class="mask-icon">

                                <a class="cart" asp-action="AddToCart" asp-controller="Cart" asp-route-id="@item.PetId">Add to Cart</a>
                            </div>
                        </div>
                        <div class="why-text">
                            <a asp-action="Detail" asp-controller="Pets" asp-route-id="@item.PetId">
                                <h4>@item.Name</h4>
                                @{
                                    var price = item.Price.ToString("C0", new CultureInfo("vi-VN"));
                                    if (price.EndsWith(".00"))
                                    {
                                        price = price.Substring(0, price.Length - 3);
                                    }
                                }
                                <h5>@price</h5>
                            </a>
                        </div>
                    </div>
            </div>
            }
           
           
        </div>
    </div>
</div>
