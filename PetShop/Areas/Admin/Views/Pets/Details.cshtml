@using System.Globalization
@model PetShop.Models.Pet

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Details @Model.Name</h1>
<hr />
<div>
    
    <div class="row">
        <div class="col-xl-5 col-lg-5 col-md-6">
            <img src="@Url.Content("~/images/pet/" + Model.ImageUrl)" alt="@Model.Name" width="400" height="300">
        </div>
        <div class="col-xl-7 col-lg-7 col-md-6">
            <dl class="row">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                
                @{var price = Model.Price.ToString("C0", new CultureInfo("vi-VN"));
                    if (price.EndsWith(".00"))
                    {
                    price = price.Substring(0, price.Length - 3);

                    }
                 }
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @price
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Breed)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Breed)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Age)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Age)
                </dd>


                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsAvailable)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>

            </dl>
            <div class="row form-group mb-3 d-flex justify-content-between mt-5">
                <div class="d-flex">

                    <a asp-action="Edit" asp-route-id="@Model?.PetId" class="btn btn-primary me-2 col-md-8">Edit</a>
                    <a class="btn btn-secondary col-md-4" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
    
</div>

