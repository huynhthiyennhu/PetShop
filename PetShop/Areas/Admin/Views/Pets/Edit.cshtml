@model PetShop.Models.Pet

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1 class="container text-center">Edit Pet @Model.Name</h1>

<hr />
<div class="row text-start justify-content-center form-container bg-light p-4 rounded">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PetId" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row form-group mb-3">
                <div class="col-md-6">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Breed" class="control-label"></label>
                <input asp-for="Breed" class="form-control" />
                <span asp-validation-for="Breed" class="text-danger"></span>
            </div>

            <div class="row form-group mb-3">
                
                <div class="col-md-8">
                    <label asp-for="PetTypeId" class="control-label"></label>
                    <select asp-for="PetTypeId" class="form-control" asp-items="ViewBag.PetTypeId"></select>
                    <span asp-validation-for="PetTypeId" class="text-danger"></span>
                </div>
                <div class="col-md-4 d-flex align-items-center">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                    </label>
                </div>
            </div>

            <div class="row form-group mb-3 d-flex justify-content-between">
                <div class="d-flex">
                    <input type="submit" value="Save" class="btn btn-primary me-2 col-md-8 " />
                    <a class="btn btn-secondary col-md-4" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
